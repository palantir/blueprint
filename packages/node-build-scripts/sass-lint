const fs = require("fs");
const path = require("path");
const stylelint = require("stylelint");

const emitReport = process.env.JUNIT_REPORT_PATH != null;

const options = {
    configFile: path.join(__dirname, "../..", ".stylelintrc"),
    files: "src/**/*.scss",
    formatter: emitReport ? require("stylelint-junit-formatter") : "string",
    syntax: "scss",
};

stylelint.lint(options).then(resultObject => {
    if (process.env.JUNIT_REPORT_PATH != null) {
        // emit JUnit XML report to <reports>/<pkg>/stylelint.xml when this env variable is set
        const reportPath = `${process.env.JUNIT_REPORT_PATH}/${path.basename(process.cwd())}/stylelint.xml`;
        fs.writeFileSync(reportPath, resultObject.output);
        console.info(`JUnit report written to ${reportPath}`);
    } else {
        console.info(resultObject.output);
    }
});
