{
    "version": "2.0.0",
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "experimentalDecorators": true,
        "jsx": "react",
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "dist/",
        "removeComments": true,
        "sourceMap": false,
        "target": "es5",
        "paths": {
            "@blueprintjs/*": ["node_modules/@blueprintjs/*"]
        }
    },
    "include": [
        "typings/tsd.d.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "test"
    ],
    "compileOnSave": false
}
