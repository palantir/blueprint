{
  "extends": ["tslint:latest", "tslint-react"],
  "rules": {
    "adjacent-overload-signatures": false,
    "arrow-parens": true,
    "jsx-alignment": true,
    "jsx-no-lambda": true,
    "jsx-no-string-ref": true,
    "jsx-self-close": true,
    "linebreak-style": "LF",
    "no-invalid-this": [true, "check-function-in-method"],
    "only-arrow-functions": false,
    "variable-name": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
    ]
  }
}
